</section>

<style>
    .timeline {
        position: relative;
        max-width: 800px;
        margin: 0 auto;
    }
    /* Barra-del-tiempo */
    .timeline::after {
        content: "";
        position: absolute;
        width: 6px;
        background-color: #ddd;
        top: 0;
        bottom: 0;
        right: 3%;
        margin-left: -3px;
    }

    @media (min-width: 768px) {
        .timeline::after {
            right: 50%;
        }
    }

    .timeline-item {
        padding: 10px 40px;
        position: relative;
        background-color: inherit;
        width: 100%;
    }

    @media (min-width: 768px) {
        .timeline-item {
            width: 50%;
        }
    }
    .timeline-item:nth-child(odd) {
        left: 0;
    }

    .timeline-item:nth-child(even) {
        left: 0;
    }

    @media (min-width: 768px) {
        .timeline-item:nth-child(even) {
            left: 50%;
        }
    }

    .timeline-item::before {
        content: "";
        position: absolute;
        width: 25px;
        height: 25px;
        right: 0px;
        background-color: #3778e2;
        border: 4px solid white;
        top: 15px;
        border-radius: 50%;
        z-index: 1;
    }

    @media (min-width: 415px) {
        .timeline-item::before {
            right: 2px;
        }
    }
    @media (min-width: 480px) {
        .timeline-item::before {
            right: 5px;
        }
    }
    @media (min-width: 560px) {
        .timeline-item::before {
            right: 7px;
        }
    }
    @media (min-width: 768px) {
        .timeline-item::before {
            right: -10px;
        }
    }

    .timeline-item:nth-child(even)::before {
        right: 0px;
    }

    @media (min-width: 415px) {
        .timeline-item:nth-child(even)::before {
            right: 2px;
        }
    }
    @media (min-width: 480px) {
        .timeline-item:nth-child(even)::before {
            right: 5px;
        }
    }
    @media (min-width: 560px) {
        .timeline-item:nth-child(even)::before {
            right: 7px;
        }
    }

    @media (min-width: 768px) {
        .timeline-item:nth-child(even)::before {
            left: -15px;
        }
    }

    .timeline-content {
        padding: 20px;
        background-color: white;
        position: relative;
        border-radius: 6px;
        width: 100%;
    }

    .timeline-content h2 {
        margin-top: 0;
        font-size: 1.5em;
    }

    .timeline-content span {
        font-size: 0.85em;
        color: #777;
        display: block;
        margin-top: 10px;
    }
</style>
